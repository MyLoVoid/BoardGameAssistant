# ============================================
# BGAI - Board Game Assistant Intelligent
# Environment Configuration Template
# ============================================
# Copy this file to .env and fill in your values
# cp .env.example .env

# --------------------------------------------
# Environment
# --------------------------------------------
ENVIRONMENT=dev  # dev | prod
DEBUG=true
NODE_ENV=development

# --------------------------------------------
# Backend API Configuration
# --------------------------------------------
HOST=0.0.0.0
PORT=8000
RELOAD=true

# --------------------------------------------
# Supabase Configuration
# --------------------------------------------
# For local development (default):
SUPABASE_URL=http://127.0.0.1:54321
SUPABASE_ANON_KEY=your-local-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-local-service-role-key-here
SUPABASE_PROJECT_ID=boardgameassistant-dev
SUPABASE_JWT_SECRET=super-secret-jwt-token-with-at-least-32-characters-long

# For production (uncomment and fill):
# SUPABASE_URL=https://your-project.supabase.co
# SUPABASE_ANON_KEY=your-production-anon-key
# SUPABASE_SERVICE_ROLE_KEY=your-production-service-role-key
# SUPABASE_JWT_SECRET=your-production-jwt-secret

# Database (for direct Postgres connections)
DATABASE_URL=postgresql://postgres:postgres@127.0.0.1:54322/postgres

# --------------------------------------------
# AI Providers
# --------------------------------------------
# Add your API keys here
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# Default AI Configuration
DEFAULT_AI_PROVIDER=openai  # openai | gemini | claude
DEFAULT_MODEL=gpt-4-turbo-preview
DEFAULT_EMBEDDING_MODEL=text-embedding-ada-002

# --------------------------------------------
# RAG Configuration
# --------------------------------------------
RAG_TOP_K=5
RAG_SIMILARITY_THRESHOLD=0.7

# --------------------------------------------
# Gemini API Configuration
# --------------------------------------------
GOOGLE_API_KEY=

# --------------------------------------------
# Rate Limiting
# --------------------------------------------
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# --------------------------------------------
# CORS Configuration
# --------------------------------------------
# Admin portal and Expo dev server URLs
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:19006,http://localhost:8081
CORS_ALLOW_CREDENTIALS=true

# --------------------------------------------
# Logging
# --------------------------------------------
LOG_LEVEL=INFO  # DEBUG | INFO | WARNING | ERROR
LOG_FORMAT=json  # json | console

# --------------------------------------------
# BGG Integration
# --------------------------------------------
# BGG_API_URL should point to the XML API v2 base (the client appends /thing automatically if needed)
BGG_API_URL=https://www.boardgamegeek.com/xmlapi2
# Preferred env var is BGG_API_TOKEN (BGG_TOKEN also works for legacy setups)
BGG_API_TOKEN=
